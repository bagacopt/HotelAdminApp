<UserControl x:Class="PAP___RECEPTIONIST_HOTEL.MVVM.View.Client.PrimaryView.Requests"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TabControl Width="1000" Height="550"
                    Style="{StaticResource TabControlTheme}">
            <TabControl.Resources>
                <Style TargetType="{x:Type TabPanel}">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </Style>
            </TabControl.Resources>

            <TabItem Header="Serviço de quartos" Width="500">
                <Grid>
                    <TabControl Width="1000" Height="550" Grid.ColumnSpan="2" Margin="-2 0 0 0" 
                                Style="{StaticResource TabControlTheme}">
                        <TabControl.Resources>
                            <Style TargetType="{x:Type TabPanel}">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </TabControl.Resources>

                        <!-- SERVIÇOS -->
                        <TabItem Header="Serviços" Width="500">
                            <StackPanel>
                                <Label Content="Serviço de limpeza de quartos diário" Margin="0 5 0 0"
                                       HorizontalAlignment="Left"
                                       Style="{StaticResource LabelTheme}"/>
                                <Button Height="35" Click="OrderButton_Click" x:Name="OrderButton1">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="7"/>
                                        </Style>
                                    </Button.Resources>

                                    <Label Content="Requisitar" Foreground="Black"
                                           Style="{StaticResource LabelTheme}"/>
                                </Button>

                                <Label Content="Serviço extra de limpeza de quarto" Margin="0 15 0 0"
                                       HorizontalAlignment="Left"
                                       Style="{StaticResource LabelTheme}"/>
                                <Button Height="35" Click="OrderButton_Click" x:Name="OrderButton2">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="7"/>
                                        </Style>
                                    </Button.Resources>

                                    <Label Content="Requisitar" Foreground="Black"
                                           Style="{StaticResource LabelTheme}"/>
                                </Button>

                                <Label Content="Kit de limpeza para uso dos hóspedes" Margin="0 15 0 0"
                                       HorizontalAlignment="Left"
                                       Style="{StaticResource LabelTheme}"/>
                                <Button Height="35" Click="OrderButton_Click" x:Name="OrderButton3">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="7"/>
                                        </Style>
                                    </Button.Resources>

                                    <Label Content="Requisitar" Foreground="Black"
                                           Style="{StaticResource LabelTheme}"/>
                                </Button>

                                <Label Content="Serviço de abertura da cama" Margin="0 15 0 0"
                                       HorizontalAlignment="Left"
                                       Style="{StaticResource LabelTheme}"/>
                                <Button Height="35" Click="OrderButton_Click" x:Name="OrderButton4">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="7"/>
                                        </Style>
                                    </Button.Resources>

                                    <Label Content="Requisitar" Foreground="Black"
                                           Style="{StaticResource LabelTheme}"/>
                                </Button>
                            </StackPanel>
                        </TabItem>

                        <!-- EXTRAS -->
                        <TabItem Header="Extras" Width="495" Margin="0 0 5 0">
                            <Grid>
                                <StackPanel>
                                    <Label Content="Shampoo e gel de banho" Margin="0 5 0 0"
                                           HorizontalAlignment="Left"
                                           Style="{StaticResource LabelTheme}"/>
                                    <Button Height="35" Click="OrderButton_Click" x:Name="OrderButton5">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="7"/>
                                            </Style>
                                        </Button.Resources>
                                        
                                        <Label Content="Requisitar" Foreground="Black"
                                               Style="{StaticResource LabelTheme}"/>
                                    </Button>

                                    <Label Content="Condicionador" Margin="0 15 0 0"
                                           HorizontalAlignment="Left"
                                           Style="{StaticResource LabelTheme}"/>
                                    <Button Height="35" Click="OrderButton_Click" x:Name="OrderButton6">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="7"/>
                                            </Style>
                                        </Button.Resources>

                                        <Label Content="Requisitar" Foreground="Black"
                                               Style="{StaticResource LabelTheme}"/>
                                    </Button>

                                    <Label Content="Sabão" Margin="0 15 0 0"
                                           HorizontalAlignment="Left"
                                           Style="{StaticResource LabelTheme}"/>
                                    <Button Height="35" Click="OrderButton_Click" x:Name="OrderButton7">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="7"/>
                                            </Style>
                                        </Button.Resources>

                                        <Label Content="Requisitar" Foreground="Black"
                                               Style="{StaticResource LabelTheme}"/>
                                    </Button>

                                    <Label Content="Kit de pasta de dentes" Margin="0 15 0 0"
                                           HorizontalAlignment="Left"
                                           Style="{StaticResource LabelTheme}"/>
                                    <Button Height="35" Click="OrderButton_Click" x:Name="OrderButton8">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="7"/>
                                            </Style>
                                        </Button.Resources>

                                        <Label Content="Requisitar" Foreground="Black"
                                               Style="{StaticResource LabelTheme}"/>
                                    </Button>

                                    <Label Content="Kit de barbear" Margin="0 15 0 0"
                                           HorizontalAlignment="Left"
                                           Style="{StaticResource LabelTheme}"/>
                                    <Button Height="35" Click="OrderButton_Click" x:Name="OrderButton9">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="7"/>
                                            </Style>
                                        </Button.Resources>

                                        <Label Content="Requisitar" Foreground="Black"
                                               Style="{StaticResource LabelTheme}"/>
                                    </Button>
                                    <Label Content="Kit de costura" Margin="0 15 0 0"
                                           HorizontalAlignment="Left"
                                           Style="{StaticResource LabelTheme}"/>
                                    <Button Height="35" Click="OrderButton_Click" x:Name="OrderButton10">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="7"/>
                                            </Style>
                                        </Button.Resources>

                                        <Label Content="Requisitar" Foreground="Black"
                                               Style="{StaticResource LabelTheme}"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>

            <!-- MANUNTENÇÃO -->
            <TabItem Header="Manutenção" Width="490">
                <StackPanel>
                    <Label Content="Ar condicionado (A/C)" Margin="0 5 0 0"
                           HorizontalAlignment="Left"
                           Style="{StaticResource LabelTheme}"/>
                    <Button Height="35" Click="OrderButton_Click" x:Name="MaintainButton1">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="7"/>
                            </Style>
                        </Button.Resources>

                        <Label Content="Requisitar" Foreground="Black"
                               Style="{StaticResource LabelTheme}"/>
                    </Button>

                    <Label Content="Cama" Margin="0 15 0 0"
                           HorizontalAlignment="Left"
                           Style="{StaticResource LabelTheme}"/>
                    <Button Height="35" Click="OrderButton_Click" x:Name="MaintainButton2">
                        <Button.Resources>
                            <Style TargetType="Border">
