                    <Button Height="35" Click="OrderButton_Click" x:Name="MaintainButton6">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="7"/>
                            </Style>
                        </Button.Resources>

                        <Label Content="Requisitar" Foreground="Black"
                               Style="{StaticResource LabelTheme}"/>
                    </Button>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>