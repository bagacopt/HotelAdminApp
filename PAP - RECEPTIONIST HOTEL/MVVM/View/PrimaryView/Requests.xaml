<UserControl x:Class="PAP___RECEPTIONIST_HOTEL.MVVM.View.Requests"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PAP___RECEPTIONIST_HOTEL.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="30,0,0,70">
        <TabControl Width="1000" Height="550" 
                    Background="#FC191819" 
                    Padding="0,0,0,0" 
                    Style="{StaticResource TabControlTheme}">
            <TabControl.Resources>
                <Style TargetType="{x:Type TabPanel}">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </Style>
            </TabControl.Resources>

            <TabItem Width="500" 
                     Margin="0,0,0,0"
                     Header="Serviço de quartos" >
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="12*"/>
                        <ColumnDefinition Width="43*"/>
                    </Grid.ColumnDefinitions>
                    <TabControl Width="1000" Height="550" 
                                Background="#FC191819" 
                                Padding="0,0,0,0" Grid.ColumnSpan="2" 
                                Margin="-2,0,0,0" 
                                Style="{StaticResource TabControlTheme}">
                        <TabControl.Resources>
                            <Style TargetType="{x:Type TabPanel}">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </TabControl.Resources>

                        <!-- SERVIÇOS -->
                        <TabItem Header="Serviços" Width="500" Margin="0,0,0,0">
                            <StackPanel>
                                <Label Content="Serviço de limpeza de quartos diário" 
                                       Style="{StaticResource LabelTheme}"
                                       HorizontalAlignment="Left"
                                       Margin="0,5,0,0"/>
                                <Button Height="35" Click="OrderButton_Click" x:Name="OrderButton1">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="7"/>
                                        </Style>
                                    </Button.Resources>

                                    <Label Content="Requisitar"
                                           Foreground="Black"
                                           Style="{StaticResource LabelTheme}"/>
                                </Button>

                                <Label Content="Serviço extra de limpeza de quarto" 
                                       Style="{StaticResource LabelTheme}"
                                       HorizontalAlignment="Left"
                                       Margin="0,15,0,0"/>
                                <Button Height="35" Click="OrderButton_Click" x:Name="OrderButton2">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="7"/>
                                        </Style>
                                    </Button.Resources>

                                    <Label Content="Requisitar"
                                           Foreground="Black"
                                           Style="{StaticResource LabelTheme}"/>
                                </Button>

                                <Label Content="Kit de limpeza para uso dos hóspedes" 
                                       Style="{StaticResource LabelTheme}"
                                       HorizontalAlignment="Left"
                                       Margin="0,15,0,0"/>
                                <Button Height="35" Click="OrderButton_Click" x:Name="OrderButton3">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="7"/>
                                        </Style>
                                    </Button.Resources>

                                    <Label Content="Requisitar"
                                           Foreground="Black"
                                           Style="{StaticResource LabelTheme}"/>
                                </Button>

                                <Label Content="Serviço de abertura da cama" 
                                       Style="{StaticResource LabelTheme}"
                                       HorizontalAlignment="Left"
                                       Margin="0,15,0,0"/>
                                <Button Height="35" Click="OrderButton_Click" x:Name="OrderButton4">
                                    <Button.Resources>
                                        <Style TargetType="Border">
                                            <Setter Property="CornerRadius" Value="7"/>
                                        </Style>
                                    </Button.Resources>

                                    <Label Content="Requisitar"
                                           Foreground="Black"
                                           Style="{StaticResource LabelTheme}"/>
                                </Button>
                            </StackPanel>
                        </TabItem>

                        <!-- EXTRAS -->
                        <TabItem Header="Extras" Width="495" Margin="0,0,5,0">
                            <Grid>
                                <StackPanel>
                                    <Label Content="Shampoo e gel de banho" 
                                       Style="{StaticResource LabelTheme}"
                                       HorizontalAlignment="Left"
                                       Margin="0,5,0,0"/>
                                    <Button Height="35" Click="OrderButton_Click" x:Name="OrderButton5">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="7"/>
                                            </Style>
                                        </Button.Resources>

                                        <Label Content="Requisitar"
                                           Foreground="Black"
                                           Style="{StaticResource LabelTheme}"/>
                                    </Button>

                                    <Label Content="Condicionador" 
                                       Style="{StaticResource LabelTheme}"
                                       HorizontalAlignment="Left"
                                       Margin="0,15,0,0"/>
                                    <Button Height="35" Click="OrderButton_Click" x:Name="OrderButton6">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="7"/>
                                            </Style>
                                        </Button.Resources>

                                        <Label Content="Requisitar"
                                           Foreground="Black"
                                           Style="{StaticResource LabelTheme}"/>
                                    </Button>

                                    <Label Content="Sabão" 
                                       Style="{StaticResource LabelTheme}"
                                       HorizontalAlignment="Left"
                                       Margin="0,15,0,0"/>
                                    <Button Height="35" Click="OrderButton_Click" x:Name="OrderButton7">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="7"/>
                                            </Style>
                                        </Button.Resources>

                                        <Label Content="Requisitar"
                                           Foreground="Black"
                                           Style="{StaticResource LabelTheme}"/>
                                    </Button>

                                    <Label Content="Kit de pasta de dentes" 
                                       Style="{StaticResource LabelTheme}"
                                       HorizontalAlignment="Left"
                                       Margin="0,15,0,0"/>
                                    <Button Height="35" Click="OrderButton_Click" x:Name="OrderButton8">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="7"/>
                                            </Style>
                                        </Button.Resources>

                                        <Label Content="Requisitar"
                                           Foreground="Black"
                                           Style="{StaticResource LabelTheme}"/>
                                    </Button>

                                    <Label Content="Kit de barbear" 
                                       Style="{StaticResource LabelTheme}"
                                       HorizontalAlignment="Left"
                                       Margin="0,15,0,0"/>
                                    <Button Height="35" Click="OrderButton_Click">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="7"/>
                                            </Style>
                                        </Button.Resources>

                                        <Label Content="Requisitar"
                                           Foreground="Black"
                                           Style="{StaticResource LabelTheme}"/>
                                    </Button>
                                    <Label Content="Kit de costura" 
                                       Style="{StaticResource LabelTheme}"
                                       HorizontalAlignment="Left"
                                       Margin="0,15,0,0"/>
                                    <Button Height="35" Click="OrderButton_Click">
                                        <Button.Resources>
                                            <Style TargetType="Border">
                                                <Setter Property="CornerRadius" Value="7"/>
                                            </Style>
                                        </Button.Resources>

                                        <Label Content="Requisitar"
                                           Foreground="Black"
                                           Style="{StaticResource LabelTheme}"/>
                                    </Button>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>

            <!-- MANUNTENÇÃO -->
            <TabItem Header="Manutenção" Width="490">
                <StackPanel>
                    <Label Content="Ar condicionado (A/C)" 
                           Style="{StaticResource LabelTheme}"
                           HorizontalAlignment="Left"
                           Margin="0,5,0,0"/>
                    <Button Height="35" Click="MaintenanceButton_Click" x:Name="MaintainButton1">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="7"/>
                            </Style>
                        </Button.Resources>

                        <Label Content="Requisitar"
                               Foreground="Black"
                               Style="{StaticResource LabelTheme}"/>
                    </Button>

                    <Label Content="Cama" 
                           Style="{StaticResource LabelTheme}"
                           HorizontalAlignment="Left"
                           Margin="0,15,0,0"/>
                    <Button Height="35" Click="MaintenanceButton_Click" x:Name="MaintainButton2">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="7"/>
                            </Style>
                        </Button.Resources>

                        <Label Content="Requisitar"
                               Foreground="Black"
                               Style="{StaticResource LabelTheme}"/>
                    </Button>

                    <Label Content="Máquina do café"
                           Style="{StaticResource LabelTheme}"
                           HorizontalAlignment="Left"
                           Margin="0,15,0,0"/>
                    <Button Height="35" Click="MaintenanceButton_Click" x:Name="MaintainButton3">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="7"/>
                            </Style>
                        </Button.Resources>

                        <Label Content="Requisitar"
                               Foreground="Black"
                               Style="{StaticResource LabelTheme}"/>
                    </Button>

                    <Label Content="Pilhas do comando" 
                           Style="{StaticResource LabelTheme}"
                           HorizontalAlignment="Left"
                           Margin="0,15,0,0"/>
                    <Button Height="35" Click="MaintenanceButton_Click" x:Name="MaintainButton4">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="7"/>
                            </Style>
                        </Button.Resources>

                        <Label Content="Requisitar"
                               Foreground="Black"
                               Style="{StaticResource LabelTheme}"/>
                    </Button>

                    <Label Content="Minibar" 
                           Style="{StaticResource LabelTheme}"
                           HorizontalAlignment="Left"
                           Margin="0,15,0,0"/>
                    <Button Height="35" Click="MaintenanceButton_Click" x:Name="MaintainButton5">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="7"/>
                            </Style>
                        </Button.Resources>

                        <Label Content="Requisitar"
                               Foreground="Black"
                               Style="{StaticResource LabelTheme}"/>
                    </Button>

                    <Label Content="Secador" 
                           Style="{StaticResource LabelTheme}"
                           HorizontalAlignment="Left"
                           Margin="0,15,0,0"/>
                    <Button Height="35" Click="MaintenanceButton_Click" x:Name="MaintainButton6">
                        <Button.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="7"/>
                            </Style>
                        </Button.Resources>

                        <Label Content="Requisitar"
                               Foreground="Black"
                               Style="{StaticResource LabelTheme}"/>
                    </Button>
                </StackPanel>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>