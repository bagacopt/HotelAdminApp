<UserControl x:Class="PAP___RECEPTIONIST_HOTEL.MVVM.View.Admin.SubView.SubManageRequests"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             Loaded="AdminManageRequests_Loaded">
    <Grid>
        <TabControl x:Name="PrimaryTabControl"
                    Width="1000" Height="460"
                    Style="{StaticResource TabControlTheme}">
            <TabControl.Resources>
                <Style TargetType="{x:Type TabPanel}">
                    <Setter Property="HorizontalAlignment" Value="Center"/>
                </Style>
            </TabControl.Resources>

            <TabItem Header="Serviço de quartos" Width="250" Margin="-120 0 0 0">
                <Grid>
                    <TabControl x:Name="SubTabControl" Margin="-2,0,0,0"
                                Width="1000" Height="550" 
                                Grid.ColumnSpan="2" 
                                Style="{StaticResource TabControlTheme}">
                        <TabControl.Resources>
                            <Style TargetType="{x:Type TabPanel}">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                            </Style>
                        </TabControl.Resources>

                        <!-- SERVIÇOS -->
                        <TabItem Header="Serviços" Width="250" Margin="-124 0 0 0">
                            <Grid Margin="0 0 199 119">
                                <StackPanel Orientation="Horizontal" Margin="0 0 0 360">
                                    <Label Content="Dados do Pedido:" Style="{StaticResource LabelTheme}" Margin="0 10 0 0"/>
                                    <ComboBox Width="150" Height="20" Margin="5 0 0 -1" x:Name="RequestData1"
                                              SelectionChanged="RequestDataSelectionChanged"/>
                                </StackPanel>

                                <Border BorderThickness="1" BorderBrush="White" CornerRadius="10" Margin="0 40 0 40"/>
                                
                                <StackPanel Orientation="Horizontal" Margin="0 50 0 327">
                                    <Label Content="Nome do pedido:" Margin="10 0 0 0"
                                           Style="{StaticResource LabelTheme}"/>
                                    <Label x:Name="showDataArray0"  Margin="0 0 0 3" Padding="1 2 0 0"
                                           Visibility="Hidden" BorderBrush="White" BorderThickness="0 0 0 1"
                                           Style="{StaticResource LabelTheme}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 90 0 287">
                                    <Label Content="Número de telefone:" Margin="10 0 0 0"
                                           Style="{StaticResource LabelTheme}"/>
                                    <Label x:Name="showDataArray1"  Margin="0 0 0 3" Padding="1 2 0 0"
                                           Visibility="Hidden" BorderBrush="White" BorderThickness="0 0 0 1"
                                           Style="{StaticResource LabelTheme}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 130 0 247">
                                    <Label Content="Email:" Margin="10 0 0 0" 
                                           Style="{StaticResource LabelTheme}"/>
                                    <Label x:Name="showDataArray2"  Margin="0 0 0 3" Padding="1 2 0 0"
                                           Visibility="Hidden" BorderBrush="White" BorderThickness="0 0 0 1"
                                           Style="{StaticResource LabelTheme}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 170 0 207">
                                    <Label Content="Quantidade:" Margin="10 0 0 0"
                                           Style="{StaticResource LabelTheme}"/>
                                    <Label x:Name="showDataArray3"  Margin="0 0 0 3" Padding="1 2 0 0"
                                           Visibility="Hidden" BorderBrush="White" BorderThickness="0 0 0 1"
                                           Style="{StaticResource LabelTheme}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 210 0 164">
                                    <Label Content="Descrição:" Margin="10 0 0 0"
                                           Style="{StaticResource LabelTheme}"/>
                                    <Label x:Name="showDataArray4"  Margin="0 0 0 3" Padding="1 2 0 0"
                                           Visibility="Hidden" BorderBrush="White" BorderThickness="0 0 0 1"
                                           Style="{StaticResource LabelTheme}"/>
                                </StackPanel>
                            </Grid>
                        </TabItem>

                        <!-- EXTRAS -->
                        <TabItem Header="Extras" Width="250" Margin="-124 0 0 0">
                            <Grid Margin="0 0 199 119">
                                <StackPanel Orientation="Horizontal" Margin="0 0 0 360">
                                    <Label Content="Dados do Pedido:" Style="{StaticResource LabelTheme}" Margin="0 10 0 0"/>
                                    <ComboBox Width="150" Height="20" Margin="5 0 0 -1" x:Name="RequestData2"
                                              SelectionChanged="RequestDataSelectionChanged"/>
                                </StackPanel>

                                <Border BorderThickness="1" BorderBrush="White" CornerRadius="10" Margin="0 40 0 40"/>

                                <StackPanel Orientation="Horizontal" Margin="0 50 0 327">
                                    <Label Content="Nome do pedido:" Margin="10 0 0 0"
                                           Style="{StaticResource LabelTheme}"/>
                                    <Label x:Name="showDataArray5"  Margin="0 0 0 3" Padding="1 2 0 0"
                                           Visibility="Hidden" BorderBrush="White" BorderThickness="0 0 0 1"
                                           Style="{StaticResource LabelTheme}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 90 0 287">
                                    <Label Content="Número de telefone:" Margin="10 0 0 0"
                                           Style="{StaticResource LabelTheme}"/>
                                    <Label x:Name="showDataArray6"  Margin="0 0 0 3" Padding="1 2 0 0"
                                           Visibility="Hidden" BorderBrush="White" BorderThickness="0 0 0 1"
                                           Style="{StaticResource LabelTheme}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 130 0 247">
                                    <Label Content="Email:" Margin="10 0 0 0" 
                                           Style="{StaticResource LabelTheme}"/>
                                    <Label x:Name="showDataArray7"  Margin="0 0 0 3" Padding="1 2 0 0"
                                           Visibility="Hidden" BorderBrush="White" BorderThickness="0 0 0 1"
                                           Style="{StaticResource LabelTheme}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 170 0 207">
                                    <Label Content="Quantidade:" Margin="10 0 0 0"
                                           Style="{StaticResource LabelTheme}"/>
                                    <Label x:Name="showDataArray8"  Margin="0 0 0 3" Padding="1 2 0 0"
                                           Visibility="Hidden" BorderBrush="White" BorderThickness="0 0 0 1"
                                           Style="{StaticResource LabelTheme}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0 210 0 164">
                                    <Label Content="Descrição:" Margin="10 0 0 0"
                                           Style="{StaticResource LabelTheme}"/>
                                    <Label x:Name="showDataArray9"  Margin="0 0 0 3" Padding="1 2 0 0"
                                           Visibility="Hidden" BorderBrush="White" BorderThickness="0 0 0 1"
                                           Style="{StaticResource LabelTheme}"/>
                                </StackPanel>
                            </Grid>
                        </TabItem>
                    </TabControl>
                </Grid>
            </TabItem>

            <!-- MANUNTENÇÃO -->
            <TabItem Header="Manutenção" Width="250" Margin="-120 0 0 0">
                <Grid Margin="0 0 199 119">
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 270">
                        <Label Content="Dados do Pedido:" 
                               Style="{StaticResource LabelTheme}" Margin="0 10 0 0"/>
                        <ComboBox Width="150" Height="20" Margin="5 0 0 -1" x:Name="RequestData3"
                                  SelectionChanged="RequestDataSelectionChanged"/>
                    </StackPanel>

                    <Border BorderThickness="1" BorderBrush="White" CornerRadius="10" Margin="0 40 0 40"/>

                    <StackPanel Orientation="Horizontal" Margin="0 50 0 235">
                        <Label Content="Nome do pedido:" Margin="10 0 0 0" 
                               Style="{StaticResource LabelTheme}"/>
                        <Label x:Name="showDataArray10" Margin="0 0 0 3" Padding="1 2 0 0"
                               Visibility="Hidden" BorderBrush="White" BorderThickness="0 0 0 1"
                               Style="{StaticResource LabelTheme}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 90 0 195">
                        <Label Content="Número de telefone:" Margin="10 0 0 0"
                               Style="{StaticResource LabelTheme}"/>
                        <Label x:Name="showDataArray11" Margin="0 0 0 3" Padding="1 2 0 0"
                               Visibility="Hidden" BorderBrush="White" BorderThickness="0 0 0 1"
                               Style="{StaticResource LabelTheme}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 130 0 155">
                        <Label  Margin="10 0 0 0" Content="Email:" 
                                Style="{StaticResource LabelTheme}"/>
                        <Label x:Name="showDataArray12" Margin="0 0 0 3" Padding="1 2 0 0"
                               Visibility="Hidden" BorderBrush="White" BorderThickness="0 0 0 1"
                               Style="{StaticResource LabelTheme}"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 170 0 115">
                        <Label Content="Descrição:" Margin="10 0 0 0"
                               Style="{StaticResource LabelTheme}"/>
                        <Label x:Name="showDataArray13" Margin="0 0 0 3" Padding="1 2 0 0"
                               Visibility="Hidden" BorderBrush="White" BorderThickness="0 0 0 1"
                               Style="{StaticResource LabelTheme}"/>
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>