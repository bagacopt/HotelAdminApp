<Window x:Class="PAP___RECEPTIONIST_HOTEL.MVVM.View.SubView.ServicesRequests"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PAP___RECEPTIONIST_HOTEL.MVVM.View.SubView" 
        xmlns:syncfusion="http://schemas.syncfusion.com/wpf"
        mc:Ignorable="d"
        Title="ServicesRequests" 
        Height="450" Width="300"
        Background="#FC191819"
        WindowStyle="None"
        Loaded="ServicesRequests_Loaded">
    <Grid>
        <StackPanel Background="White" Height="60" VerticalAlignment="Top">
            <Button BorderThickness="0"
                    Content="«"
                    Foreground="White"
                    FontSize="16"
                    FontFamily="Montserrat"
                    Cursor="Hand"
                    Margin="0,10,260,0"
                    Click="BackButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Background" Value="#28AEED"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#278BEF"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>

                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="18" Height="18"
                                        CornerRadius="9"
                                        Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                              HorizontalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <Label Style="{StaticResource LabelTheme}"
                   FontSize="12"
                   Foreground="Black"
                   FontWeight="Bold"
                   VerticalAlignment="Top"
                   HorizontalAlignment="Center"
                   Content=""
                   x:Name="titleLabel"
                   Margin="-10,-21,0,0"/>
            
            <StackPanel Orientation="Horizontal">
                <Label Style="{StaticResource LabelTheme}" 
                   Content="Nº do quarto:"
                   Foreground="Black"
                   FontSize="8"
                   Margin="0,10,-7,0"/>
                <Label x:Name="nRoomLabel"
                       Content=""
                       Style="{StaticResource LabelTheme}"
                       Foreground="Black"
                       FontSize="8"
                       Margin="0,10,0,0">
                </Label>
            </StackPanel>
        </StackPanel>

        <Border CornerRadius="10" BorderThickness="2" Background="White" Height="300" Margin="25,0,25,0">
            <StackPanel Margin="0,10,0,0">
                <StackPanel Margin="0,10,0,0">
                    <Label Content="Número de telefone"
                           Style="{StaticResource LabelTheme}" 
                           Foreground="Black" FontSize="10"
                           Margin="10,0,0,0"/>
                    <TextBox Margin="10,0,10,0"
                             x:Name="mobileTxtBox"/>
                </StackPanel>

                <StackPanel Margin="0,10,0,0">
                    <Label Content="Email"
                           Style="{StaticResource LabelTheme}" 
                           Foreground="Black" FontSize="10"
                           Margin="10,0,0,0"/>
                    <TextBox Margin="10,0,10,0"
                             x:Name="emailTxtBox"/>
                </StackPanel>

                <StackPanel Margin="0,10,0,0">
                    <Label Content="Quantidade"
                           Style="{StaticResource LabelTheme}" 
                           Foreground="Black" FontSize="10"
                           Margin="10,0,0,0"/>
                    <syncfusion:UpDown Margin="10,0,150,0"
                                       x:Name="quantityUpDown"/>
                </StackPanel>

                <StackPanel Margin="0,10,0,0">
                    <Label Content="Descrição do pedido"
                           Style="{StaticResource LabelTheme}" 
                           Foreground="Black" FontSize="10"
                           Margin="10,0,0,0"/>
                    <TextBlock Margin="10,0,10,0" Height="50" 
                               Background="gray"
                               x:Name="descriptionTxtBox"/>
                </StackPanel>

                <Button
                        Height="30"
                        Margin="70,10,70,0" Click="OrderButton_Click">
                    <TextBlock Text="Requisitar"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"/>
                </Button>
            </StackPanel>
        </Border>
    </Grid>
</Window>
